{
  "name": "@yr/weather-symbols",
  "version": "1.0.0",
  "description": "Yr weather symbols",
  "author": "alexander.pope@nrk.no",
  "dependencies": {
    "react": "0.14.2"
  },
  "devDependencies": {
    "buddy": "3.1.0",
    "react-dom": "0.14.2",
    "simpler-browser-require": "1.0.0",
    "svg-to-png": "^2.0.1",
    "transfigure-babel": "6.1.4",
    "transfigure-nunjucks": "2.1.0"
  },
  "optionalDependencies": {
    "buddy-server": "1.0.0"
  },
  "main": "src/index.js",
  "scripts": {
    "build": "buddy build",
    "convert": "node bin/convert dist",
    "prepublish": "buddy build && node bin/convert dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "buddy --reload --serve watch"
  },
  "repository": "https://github.com/YR/weather-symbols.git",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/YR/weather-symbols/issues"
  },
  "homepage": "https://github.com/YR/weather-symbols#readme",
  "browser": "index.js",
  "buddy": {
    "build": {
      "targets": [
        {
          "input": "src",
          "output": ".",
          "modular": false
        },
        {
          "input": "src/preview.js",
          "output": "preview.js",
          "bootstrap": true
        }
      ]
    },
    "server": {
      "port": 3000
    }
  }
}
